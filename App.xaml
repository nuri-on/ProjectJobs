<Application
    x:Class="ProjectJobs.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectJobs"
    xmlns:localData="using:ProjectJobs.Data"
    xmlns:converter="using:ProjectJobs.Converter">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    플랫폼 모양 및 느낌의 일반적인 측면을 정의하는 스타일입니다.
                    Visual Studio 프로젝트 및 항목 템플릿에 필요합니다.
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 응용 프로그램 관련 리소스 -->

            <x:String x:Key="AppName">취업누리</x:String>
            <converter:TimeConverter x:Key="TimeConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
